<?xml version="1.0" encoding="UTF-8"?>

<deployment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:jboss:bean-deployer bean-deployer_1_0.xsd"
	xmlns="urn:jboss:bean-deployer">
	<bean name="jboss.mq.destination:service=Queue,name=spirit-queue1"
		class="org.jboss.mq.kernel.Queue">
		<property name="destinationManagerPojo">
			<inject bean="jboss.mq:service=DestinationManager" />
		</property>
		<property name="initialContextProperties">
			<inject bean="InitialContextProperties" />
		</property>
		<property name="destinationName">spirit-queue1</property>
	</bean>

   <bean name="jboss.mq.destination:service=Topic,name=spirit-queue" class="org.jboss.mq.kernel.Topic">
     <property name="destinationManagerPojo"><inject bean="jboss.mq:service=DestinationManager"/></property>
     <property name="initialContextProperties"><inject bean="InitialContextProperties"/></property>
     <property name="destinationName">spirit-queue</property>
   </bean>

</deployment>

